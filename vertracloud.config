{
  "name": "discord-github-bot",
  "version": "2.0.0",
  "type": "nodejs",
  "runtime": "node:20",
  "buildCommand": "npm install && npm run build",
  "startCommand": "npm start",
  "healthCheck": {
    "enabled": false
  },
  "environment": {
    "NODE_ENV": "production",
    "NODE_VERSION": "20"
  },
  "requiredSecrets": [
    "DISCORD_BOT_TOKEN",
    "ENCRYPTION_SECRET"
  ],
  "resources": {
    "memory": "512MB",
    "cpu": "0.5"
  },
  "persistence": {
    "enabled": true,
    "paths": [
      "/app/data"
    ]
  },
  "restart": {
    "policy": "always",
    "maxRetries": 3
  }
}
